doctype html
head
    link(rel="stylesheet", href="style.css")
body.body2
    .mainGrid
    header
        .container
        .parkingNav
            h1.logo Buy My Ticket
            nav
                ul
                    li
                        a(href='insert') Home
                    li
                        a(href='TicketBrowser') Ticket Browser
                    li
                    a(href='Login') Log in
                    li
                    a(href='Signin') sign in
    .tohen
        h6 #{var1}
        .form_container
        .title_container
            h2 Sign In Form
        .row.clearfix
            form(action="/insertUser",method="post", required)
                input#email.input_field(type='email' placeholder='Email' name='Email' required='')
                br
                input#password.input_field(type='password' placeholder='Password' name='Password' required='')
                br
                input#repassword.input_field(type='password' placeholder='Re-type Password' name='rePassword' required='')
                br
                input#fname.input_field(type='text' placeholder='First Name' name='First' required='')
                br
                input#lname.input_field(type='text' placeholder='Last Name' name='Last' required='')
                br
                input#male(type='radio' name='radiogroup1' required='')
                label(for='rd1') Male
                input#female(type='radio' name='radiogroup1')
                label(for='rd2') Female
                br
                input#cb2(type='checkbox' required='')
                label(for='cb2') I want to receive the newsletter
                br
                input.BTNS(type='submit' value='Register')
